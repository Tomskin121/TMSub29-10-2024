                        <input  class="overlayinputText height100 width100" type="text" id="newnum" value=""><br>
                    </div>
                
                    <div class="input-wrapper width80 height33 block">
                        <label class =" textcolorsecondary" for="UserName">Card CVV</label><br>
                        <input  class="overlayinputText height100 width100" type="text" id="newCVV" value=""><br>
                    </div>
                    
                    
                </div>
            
                <div class = "width100 ">
                <input class = "width40 height20 block overlayinputinputbutton position-relative blockcentral" id = "subscribe" type="Submit" value="Subscribe">
            </div>
            </form>



</div>


<div class = "width40 height100 flexcolumn colorSecondary"> 
    <div class = "width90 block">
        <h3 class = "colorPrimary width100 textcolorprimary"> Order Summary</h3>    

        <p> 1 x <%=subscriptioninfo[0].Magazine_Name %></p>
        </div>

</div>



        <% } %>
